@model StoreApp.WebApp.Models.CustomerProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<h1>ProfileAsync</h1>

<div>
    <h4>CustomerProfileViewModel</h4>
    <hr />
    <div id="ProfileBlock">

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CustomerID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CustomerID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Street)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Street)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.State)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Zip)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Zip)
            </dd>
        </dl>
    </div>
    <div id="OrderBlock">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerOrderIDs)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderStore)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerProduct)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CustomerOrders)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.orderID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.storeLocation.storeNumber)
                        </td>
                        <td>
                            @foreach (var items in item.customerProductList)
                            {
                                @(items.name + ": " + items.amount)<br />
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div>
    @Html.ActionLink("New Order","Order","Create", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
